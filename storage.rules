rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Original uploads
    match /uploads/{userId}/{itemId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Processed images
    match /processed/{userId}/{itemId} {
      // Allow read to everyone (images are made public by function)
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback: deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
