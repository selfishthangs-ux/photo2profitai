rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's listings subcollection
      match /listings/{listingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's credits subcollection
      match /credits/{document=**} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // Only cloud functions can write credits
      }
    }
    
    // Public listings (optional - for marketplace feature)
    match /public_listings/{listingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
