# Environment Variables
# Copy this file to .env and fill in your actual values

# Discord webhook URL for alerts (CORRECT NAME - not LERT_DISCORD_WEBHOOK_URL)
ALERT_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Firebase configuration
# Note: Use actual \n characters (not \\n) for newlines in the key
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour key here with actual newlines\n-----END PRIVATE KEY-----\n"
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Stripe configuration
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_TRIAL_PRICE_ID=price_trial_xxxxxxxxxxxx
STRIPE_CASUAL_PRICE_ID=price_casual_xxxxxxxxxxxx
STRIPE_PRO_PRICE_ID=price_pro_xxxxxxxxxxxx
STRIPE_BOSS_PRICE_ID=price_boss_xxxxxxxxxxxx

# Base URL for redirects
BASE_URL=https://photo2profit-ai.web.app

# Server configuration
PORT=3000
NODE_ENV=development
